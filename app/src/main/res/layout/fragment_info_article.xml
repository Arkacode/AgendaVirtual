<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ipca.cm.agendavirtual.InfoArticleFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/load"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageViewAgendaInfo"
            android:layout_height="200dp"
            android:scaleType="fitXY"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitleInfo"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewDescInfo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="viewStart" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitleInfo"
            android:textSize="30sp"
            android:layout_below="@+id/imageViewAgendaInfo"
            android:layout_alignParentStart="true"
            android:textColor="#03b300"
            android:textAlignment="viewStart"
            android:layout_marginLeft="10dp"
            android:textStyle="normal|bold" />

    </RelativeLayout>
</FrameLayout>
